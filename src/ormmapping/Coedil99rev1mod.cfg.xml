<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
 "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
   	<!-- properties -->
		<property name="dialect">org.hibernate.dialect.PostgreSQLDialect</property>
		<property name="connection.driver_class">org.postgresql.Driver</property>
		<property name="connection.url">jdbc:postgresql://localhost:5432/coedil99</property>
		<property name="connection.username">postgres</property>
		<property name="connection.password">postgres</property>
		<property name="hibernate.connection.provider_class">org.hibernate.connection.C3P0ConnectionProvider</property>
		<property name="hibernate.c3p0.acquire_increment">1</property>
		<property name="hibernate.c3p0.idle_test_period">0</property>
		<property name="hibernate.c3p0.min_size">1</property>
		<property name="hibernate.c3p0.max_size">15</property>
		<property name="hibernate.c3p0.timeout">0</property>
		<property name="show_sql">false</property>
		<property name="query.substitutions">true 1, false 0, yes 'Y', no 'N'</property>
		<!-- mapping files -->
		<mapping resource="ormmapping/coedil99/PersistentModel/Cliente.hbm.xml" />
		<mapping resource="ormmapping/coedil99/PersistentModel/DistintaLavorazione.hbm.xml" />
		<mapping resource="ormmapping/coedil99/PersistentModel/ElementoDistinta.hbm.xml" />
		<mapping resource="ormmapping/coedil99/PersistentModel/Indirizzo.hbm.xml" />
		<mapping resource="ormmapping/coedil99/PersistentModel/Item.hbm.xml" />
		<mapping resource="ormmapping/coedil99/PersistentModel/ListaRintracciabilita.hbm.xml" />
		<mapping resource="ormmapping/coedil99/PersistentModel/Listino.hbm.xml" />
		<mapping resource="ormmapping/coedil99/PersistentModel/Preventivo.hbm.xml" />
	</session-factory>
</hibernate-configuration>
